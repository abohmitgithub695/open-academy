        <record id="view_material_form" model="ir.ui.view">
            <field name="name">event.material.form</field>
            <field name="model">event.material</field>
            <field name="arch" type="xml">
                <form string="Material">
                    <sheet>
                        <group>
                            <field name="material_name"/>
